<%- include('./base/header.ejs') %>
<div class="container">
  <div class="alert bg-success my-3">
    <h4 class="text-center" style="color: white;">Add New Student</h4>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col"> </div>
    <div class="col">
      <form action='/update/student/<%= student._id %>' method="post">
        <div>
          <label class="form-label">Roll No</label>
          <input type="text"  class="form-control" name="rollno" value="<%= student.rollno %>">
        </div>
        <div>
          <label class="form-label">First Name</label>
          <input type="text" class="form-control" name="firstName" value="<%= student.rollno %>">
        </div>
        <div>
          <label class="form-label">Last Name</label>
          <input type="text" class="form-control" name="lastName" value="<%= student.firstName %>">
        </div>
        <div>
          <label class="form-label">Father Name </label>
          <input type="text" class="form-control" name="fatherName" value="<%= student.lastName %>">
        </div>
        <div>
          <label class="form-label">Adhar Card</label>
          <input type="text" class="form-control" name="adharcardNO" value="<%= student.fatherName %>">
        </div>
        <div>
          <label class="form-label">Mobile NUmber</label>
          <input type="text" class="form-control" name="mobileNo" value="<%= student.adharcardNO %>">
        </div>
        <input type="submit" value="Update Student" class="btn btn-warning w-100 my-4"  >
          </form>
    </div>
    <div class="col"></div>
  </div>
</div>
<%- include('./base/footer.ejs') %>